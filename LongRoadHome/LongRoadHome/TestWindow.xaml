<Window x:Class="LongRoadHome.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uControl="clr-namespace:LongRoadHome.Controls"
        Title="TestWindow" Height="300" Width="300" Name="Testwin">
    <Window.Resources>
        <BitmapImage x:Key="disabledLocMap" UriSource="Resources/LocMap-Active.png" />
        <BitmapImage x:Key="enabledLocMap" UriSource="Resources/LocMap-Inactive.png" />
    </Window.Resources>
    <StackPanel>
        <uControl:DemoTextBox  
            DemoText="{Binding ElementName=Testwin, Path=DemoText, UpdateSourceTrigger=PropertyChanged}"
            />
        <TextBox Name="textSource" Text="{Binding ElementName=Testwin, Path=DemoText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="150"/>
    </StackPanel>
</Window>
